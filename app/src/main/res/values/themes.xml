<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.Fourth" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_main</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->

        <item name="colorSecondary">@color/color_gray</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#B3000000</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="NoActionBar" parent="Theme.Fourth">
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor">@color/color_main</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="SplashScreen" parent="NoActionBar">
        <item name="android:windowBackground">@drawable/splashscreen</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="CustomSwitcher" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:thumbTint">@color/custom_switcher_thumb</item>
        <item name="trackTint">@color/custom_switcher_track</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
</resources>